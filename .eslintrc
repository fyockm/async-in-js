{
	"env": {
		"node": true,
		"es6": true
	},

	"rules": {
		"block-scoped-var": 2,
		"brace-style": [2, "1tbs", { "allowSingleLine": true }],
		"camelcase": [2, {"properties": "never"}],
		"comma-style": [2, "last"],
		"consistent-this": [2, "self"],
		"curly": [2, "all"],
		"eol-last": 0,
		"func-names": 0,
		"handle-callback-err": [2, "err"],
		"indent": [2, "tab"],
		"key-spacing": [2, {
			"beforeColon": false,
			"afterColon": true
		}],
		"keyword-spacing": 2,
		"max-nested-callbacks": [2, 4],
		"no-lonely-if": 2,
		"no-nested-ternary": 2,
		"no-self-compare": 2,
		"no-shadow": 2,
		"no-spaced-func": 2,
		"no-sync": 2,
		"no-throw-literal": 2,
		"no-undefined": 2,
		"no-underscore-dangle": 0,
		"no-unused-vars": [2, {"vars":"all", "args":"none"}],
		"no-use-before-define": [2, "nofunc"],
		"no-void": 2,
		"no-wrap-func": 0,
		"quotes": [2, "single"],
		"radix": 2,
		"space-before-blocks": [2, "always"],
		"space-before-function-paren": [2, "never"],
		"space-infix-ops": 2,
		"space-unary-ops": 2,
		"strict": 0,
		"wrap-iife": 2
	}
}